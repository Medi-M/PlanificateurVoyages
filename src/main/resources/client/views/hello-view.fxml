<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.controllers.AccueilController">

    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="Voyages" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Créer un voyage" onAction="#handleCreerVoyage"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <TableView fx:id="tableVoyages" prefHeight="380" prefWidth="800">
                <columns>
                    <TableColumn fx:id="nomCol" text="Nom du voyage" prefWidth="160"/>
                    <TableColumn fx:id="destinationCol" text="Destination" prefWidth="140"/>
                    <TableColumn fx:id="dateDepartCol" text="Date départ" prefWidth="110"/>
                    <TableColumn fx:id="dateRetourCol" text="Date retour" prefWidth="110"/>
                    <TableColumn fx:id="distanceCol" text="Distance (km)" prefWidth="120"/>
                    <TableColumn fx:id="dureeCol" text="Durée (h)" prefWidth="100"/>
                    <TableColumn fx:id="prixCol" text="Prix (€)" prefWidth="90"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button fx:id="modifierButton" text="Modifier"/>
                <Button fx:id="supprimerButton" text="Supprimer"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
